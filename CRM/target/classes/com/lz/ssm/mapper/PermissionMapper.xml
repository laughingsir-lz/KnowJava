<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lz.ssm.mapper.PermissionMapper" >
  <resultMap id="BaseResultMap" type="com.lz.ssm.domain.Permission" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="expression" property="expression" jdbcType="VARCHAR" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from permission
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.lz.ssm.domain.Permission" useGeneratedKeys="true" keyProperty="id" >
    insert into permission (name, expression)
    values (#{name,jdbcType=VARCHAR}, #{expression,jdbcType=VARCHAR})
  </insert>

  <update id="updateByPrimaryKey" parameterType="com.lz.ssm.domain.Permission" >
    update permission
    set name = #{name,jdbcType=VARCHAR},
      expression = #{expression,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, name, expression
    from permission
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, name, expression
    from permission
  </select>
    <select id="queryCount" resultType="java.lang.Integer">
      select count(id) from permission
    </select>
  <select id="queryPermission" resultType="com.lz.ssm.domain.Permission">
    select id, name, expression
    from permission
   <!-- limit #{start},#{pageSize}-->
  </select>
    <select id="selectSetAll" resultType="com.lz.ssm.domain.Permission">
      select id, name, expression
    from permission
    </select>
  <select id="selectByRoleId" resultType="Permission">
    select p.id ,p.name, p.expression from permission p join role_permission rp on p.id=rp.permission_id
    where rp.role_id=#{roleId}
  </select>
    <select id="queryByEmployeeId" resultType="java.lang.String">
      select p.expression from permission p
      join role_permission rp
      on p.id = rp.permission_id
      join employee_role er
      on rp.role_id = er.role_id
      where er.employee_id=#{employeeId}
    </select>
</mapper>